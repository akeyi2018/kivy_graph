         font_size: 30
         size_hint_x: 0.4
      Label:
         id: weight 
         text: '体重:'
         font_size: 30
         # size: (50, 50)
         color: 0, 0, 1, 0.5
         size_hint_x: 0.6  
      TextInput:
         id: weight_in
         text: '77'
         font_size: 30
         # size: (50, 50)
         size_hint_x: 0.6     

      
   BoxLayout:
      size_hint_y: .06
      Button:
         id: input_val
         text: "データ確定&更新"
         font_size: 30
         on_release: root.create_data()
      Button:
         text: "グラフ保存"
         font_size: 30
         on_release: root.saveit()
         