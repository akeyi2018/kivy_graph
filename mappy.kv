   BoxLayout:
      id:box
      size_hint_y: .9
      pos_hint: {"top":1}
   BoxLayout:
      size_hint_y: .06
      pos: 10, 50
      Label:
         id: bld_high 
         text: '収縮期血圧:'
         font_size: 30
         color: 0, 0, 1, 0.5
         size_hint_x: 0.9
      TextInput:
         id: bld_high_in
         text: '140'
         font_size: 30
         size_hint_x: 0.4
      Label:
         id: bld_low 
         text: '拡張期血圧:'
         font_size: 30
         color: 0, 0, 1, 0.7
         size_hint_x: 0.9 
      TextInput:
         id: bld_low_in
         text: '110'
         font_size: 30
         size_hint_x: 0.4
      Label:
         id: pulse 
         text: '心拍数:'
         font_size: 30
         color: 0, 0, 1, 0.5
         size_hint_x: 0.6 
